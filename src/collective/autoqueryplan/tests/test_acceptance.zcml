<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser">

    <include package="Products.CMFCore" file="permissions.zcml" />

    <browser:page
        name="queue-task-form"
        for="*"
        class=".test_acceptance.autoqueryplanForm"
        permission="cmf.ManagePortal"
        />

    <browser:page
        name="queue-task-email-form"
        for="*"
        class=".test_acceptance.autoqueryplanEmailForm"
        permission="cmf.ManagePortal"
        />

    <browser:page
        name="send-email-view"
        for="*"
        class=".test_acceptance.autoqueryplanEmailView"
        layer="collective.autoqueryplan.interfaces.IautoqueryplanLayer"
        permission="zope2.View"
        />

</configure>
